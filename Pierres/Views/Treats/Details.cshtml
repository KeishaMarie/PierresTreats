@{
  Layout = "_Layout";
}

@model Pierres.Models.Treat

<h2>Tasty Treats</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.TreatName): @Html.DisplayFor(model => model.TreatName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This treat does not include any added flavor.</p>
}
else
{
  <h4>Treats with this flavor</h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{@join.Flavor.FlavorDescription}", "Details", "Flavors", new {id = join.Flavor.FlavorId})</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add a Flavor", "AddFlavor", "Treats", new { id = @Model.TreatId })</p>
<hr />

<p>@Html.ActionLink("Edit Treat", "Edit", new {id = Model.TreatId})</p>
<p>@Html.ActionLink("Delete Treat", "Delete", new {id = Model.TreatId})</p>
<p>@Html.ActionLink("All Treats", "Index")</p>