@{
  Layout = "_Layout";
}

@model Pierres.Models.Treat

<h2>Add a Flavor</h2>
<h4>Add a flavor to @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Choose a Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}
<hr />

<p>@Html.ActionLink("Back to All Treats", "Index")</p>

