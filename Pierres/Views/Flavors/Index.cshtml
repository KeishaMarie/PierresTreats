@{
  Layout = "_Layout";
}

@using Pierres.Models;

<h2>Fabulous Flavors</h2>

@if(@Model.Count == 0)
{
  <h4>No flavors available.</h4>
}
else
{
  <ul>
    @foreach(Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorDescription}", "Details", new {id = flavor.FlavorId})</li>
    }
  </ul>
}
<hr />

<p>@Html.ActionLink("Add New Flavor", "Create")</p>