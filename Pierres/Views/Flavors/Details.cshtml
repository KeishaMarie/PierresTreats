@{
  Layout = "_Layout";
}

@model Pierres.Models.Flavor

<h2>Fabulous Flavors</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.FlavorDescription): @Html.DisplayFor(model => model.FlavorDescription)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>There are currently no treats with this flavor.</p>
}
else
{
  <h4>Treats with this flavor</h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{@join.Treat.TreatName}", "Details", "Treats", new {id = join.Treat.TreatId})</li>
    }
  </ul>
}
<hr />

<p>@Html.ActionLink("Edit Flavor", "Edit", new {id = Model.FlavorId})</p>
<p>@Html.ActionLink("Delete Flavor", "Delete", new {id = Model.FlavorId})</p>
<p>@Html.ActionLink("All Flavors", "Index")</p>