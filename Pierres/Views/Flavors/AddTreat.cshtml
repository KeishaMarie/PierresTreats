@{
  Layout = "_Layout";
}

@model Pierres.Models.Flavor

<h2>Add a treat that comes in @Html.DisplayFor(m => m.FlavorDescription)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(m => m.FlavorId)

  @Html.Label("Enter in a Treat ")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" />
}
<hr />

<p>@Html.ActionLink("Back to All Flavors", "Index")</p>
