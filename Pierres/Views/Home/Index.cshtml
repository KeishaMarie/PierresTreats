@{
  Layout = "_Layout";
}

@using Pierres.Models;

<h2>Pierre's Bakery</h2>

<h4>Tasty Treats</h4>

 @if (@Model.Count == 0)
{
  <h4>No treats have been added.</h4>
} 

<ul>
  @foreach(Treat Treat in Model)
  {
    <li>@Html.ActionLink($"{Treat.TreatName}", "Details", "Treats", new {id = Treat.TreatId})</li>
  }
</ul>

<h2>Fabulous Flavors</h2>

@if (@Model.Count == 0)
{
  <h4>No flavors available.</h4>
}

<ul>
  @foreach(Flavor Flavor in ViewBag.Flavor)
  {
    <li>@Html.ActionLink($"{Flavor.FlavorDescription}", "Details", "Flavors", new {id = Flavor.FlavorId})</li>
  }
</ul>

<hr />
<p>@Html.ActionLink("All Treats", "Index", "Treats")</p>
<p>@Html.ActionLink("All Flavors", "Index", "Flavors")</p>